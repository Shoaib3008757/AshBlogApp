<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AshirNewBlogPost"
    android:background="@drawable/simple_bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@+id/writeNewPost"


        android:id="@+id/relativeLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Upload Photo"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/uploadImage"
            android:background="@drawable/edit_text_style"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/writeNewPost"
        android:layout_marginTop="17dp"
        android:background="@drawable/edit_text_style"
        android:hint="New Blog Text"
        android:gravity="top"
        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:layout_below="@+id/cameraPhoto" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Blog"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:id="@+id/post"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="160px"
        android:layout_height="160px"
        android:id="@+id/cameraPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>